{
  "apps" : [
    {
      "name"   : "myapp",
      "script" : "./index.js",
      "exec_mode": "cluster",
      "instances": 2
    }
  ],
  "deploy" : {
    "prod" : {
      "user" : "myapp",
      "host" : "vds",
      "ref"  : "origin/master",
      "repo" : "git@github.com:Gaen/sample-app.git",
      "path" : "/home/myapp/sample-app/",
      "post-setup": "source ~/.nvm/nvm.sh && npm i -g pm2",
      "post-deploy" : "source ~/.nvm/nvm.sh && npm ci --production && pm2 startOrRestart ecosystem.json --env prod"
    }
  }
}